<?xml version="1.0"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	
	<servlet>
		<display-name>Latest Content Viewer Servlet</display-name>
		<servlet-name>LatestContentViewerServlet</servlet-name>
		<servlet-class>fr.ortolang.diffusion.content.LatestContentViewerServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
		<enabled>true</enabled>
	</servlet>
	
	<servlet>
		<display-name>All Content Viewer Servlet</display-name>
		<servlet-name>AllContentViewerServlet</servlet-name>
		<servlet-class>fr.ortolang.diffusion.content.AllContentViewerServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
		<enabled>true</enabled>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LatestContentViewerServlet</servlet-name>
		<url-pattern>/latest/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AllContentViewerServlet</servlet-name>
		<url-pattern>/all/*</url-pattern>
	</servlet-mapping>
	
</web-app>
