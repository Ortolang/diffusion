<?xml version="1.0"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<filter>
		<description>CORS</description>
		<display-name>CORSFilter</display-name>
		<filter-name>CORSFilter</filter-name>
		<filter-class>fr.ortolang.diffusion.api.rest.filter.CORSFilter</filter-class>
	</filter>
	<filter>
		<description>Handle Basic HTTP Authentication Headers</description>
		<display-name>BasicAuthenticationFilter</display-name>
		<filter-name>BasicAuthenticationFilter</filter-name>
		<filter-class>fr.ortolang.diffusion.api.rest.filter.BasicAuthenticationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>monitoring</filter-name>
		<filter-class>net.bull.javamelody.MonitoringFilter</filter-class>
		<init-param>
			<param-name>http-transform-pattern</param-name>
			<param-value>(?&lt;=/rest/objects).*</param-value>
			<!-- <param-value>[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89aAbB][a-f0-9]{3}-[a-f0-9]{12}</param-value> -->
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>monitoring</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CORSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BasicAuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>net.bull.javamelody.SessionListener</listener-class>
	</listener>
	<servlet>
		<display-name>SSH Server Servlet</display-name>
		<servlet-name>SSHServlet</servlet-name>
		<servlet-class>fr.ortolang.diffusion.api.ssh.SSHServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<enabled>true</enabled>
	</servlet>
	<servlet>
		<display-name>OAI-PMH Servlet</display-name>
		<servlet-name>OAIPMHServlet</servlet-name>
		<servlet-class>fr.ortolang.diffusion.api.oaipmh.OAIPMHServlet</servlet-class>
		<!-- <load-on-startup>1</load-on-startup> -->
		<!-- <enabled>true</enabled> -->
	</servlet>
	<servlet-mapping>
		<servlet-name>fr.ortolang.diffusion.api.rest.DiffusionApplication</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OAIPMHServlet</servlet-name>
		<url-pattern>/oai/*</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>All Access</web-resource-name>
			<url-pattern>/rest/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>PUT</http-method>
			<http-method>HEAD</http-method>
			<http-method>OPTIONS</http-method>
			<http-method>TRACE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>
