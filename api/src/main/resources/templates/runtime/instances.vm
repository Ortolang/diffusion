<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong>List of workflows instances</strong></h3>
	</div>
	<div class="panel-body">
		<table class="table table-condensed table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Key</th>
					<th>Name</th>
					<th>Initier</th>
					<th>Activity</th>
					<th>Suspended</th>
				</tr>
			</thead>
			<tbody>
			#foreach( $entry in $entity.entries )
				<tr>
					<td>$foreach.count</td>
					<td>$entry.key</td>
					<td>$entry.name</td>
					<td>$entry.initier</td>
					<td>$entry.activity</td>
					<td>$entry.suspended</td>
				</tr>
			#end
			</tbody>
		</table>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong>Create a new Hello World Instance</strong></h3>
	</div>
	<div class="panel-body">
		<form class="form-horizontal" role="form" action="./instances" method="post">
			<input type="hidden" id="definition" name="definition" value="helloworld"/>
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Name</label>
				<div class="col-sm-4">
					<input type="text" class="form-control input-sm" id="name" name="name" placeholder="Enter Greeter Name"/>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default btn-sm">Start HelloWorld Workflow</button>
				</div>
			</div>
		</form>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong>Create a new simple-publish process</strong></h3>
	</div>
	<div class="panel-body">
		<form class="form-horizontal" role="form" action="" method="post">
			<input type="hidden" id="definition" name="definition" value="simple-publish"/>
			<div class="form-group">
				<label for="keys" class="col-sm-2 control-label">Keys</label>
				<div class="col-sm-8">
					<input type="text" class="form-control input-sm" id="key" name="keys" placeholder="Enter Keys to publish"/>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default btn-sm">Start Simple Publish  Process</button>
				</div>
			</div>
		</form>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong>Create a new import-workspace process</strong></h3>
	</div>
	<div class="panel-body">
		<form class="form-horizontal" role="form" action="" method="post" enctype="multipart/form-data">
			<input type="hidden" id="definition" name="definition" value="import-bag"/>
			<div class="form-group">
				<label for="wsid" class="col-sm-2 control-label">Workspace ID</label>
				<div class="col-sm-4">
					<input type="text" class="form-control input-sm" id="wsid" name="workspace-key" placeholder="Enter Workspace ID"/>
				</div>
			</div>
			<div class="form-group">
				<label for="wstype" class="col-sm-2 control-label">Workspace Type</label>
				<div class="col-sm-4">
					<input type="text" class="form-control input-sm" id="wstype" name="workspace-type" placeholder="Enter Workspace Type"/>
				</div>
			</div>
			<div class="form-group">
				<label for="wsname" class="col-sm-2 control-label">Workspace Name</label>
				<div class="col-sm-8">
					<input type="text" class="form-control input-sm" id="wsname" name="workspace-name" placeholder="Enter Workspace Name"/>
				</div>
			</div>
			<div class="form-group">
				<label for="bag-hash" class="col-sm-2 control-label">Workspace Bag</label>
				<div class="col-sm-8">
					<input type="file" id="bag-hash" name="bag-hash"/>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default btn-sm">Start Import Bag Process</button>
				</div>
			</div>
		</form>
	</div>
</div>