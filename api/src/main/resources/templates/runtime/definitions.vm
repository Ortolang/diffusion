<div class="panel panel-default">
  <div class="panel-heading">
  	<h3 class="panel-title"><strong>Listing all workflow definitions</strong></h3>
  </div>
  <table class="table table-condensed table-hover">
	 <thead>
	   	<tr>
	   		<th>#</th>
	   		<th>Key</th>
	   		<th>Name</th>
	   		<th>FirendlyName</th>
	   		<th>Version</th>
	   		<th>Suspended</th>
	   		<th>Actions</th>
	  	</tr>
	 </thead>
	 <tbody>
	 #foreach( $entry in $entity.entries )
		#set( $count = $foreach.count + $entity.offset - 1 )
		<tr>
			<td>$count</td>
			<td>$entry.key</td>
			<td>$entry.name</td>
			<td>$entry.friendlyName</td>
			<td>$entry.version</td>
			<td>$entry.suspended</td>
			<td>
				<div class="btn-group"><a class="btn btn-default btn-xs" href="definitions/$entry.key/model">model</a></div>
				<div class="btn-group"><a class="btn btn-default btn-xs" href="definitions/$entry.key/diagram">diagram</a></div>
			</td>
	   	</tr>
	 #end
	 </tbody>
  </table>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong>Create a new workflow definition</strong></h3>
	</div>
	<div class="panel-body">
		<form class="form-horizontal" role="form" action="" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="content" class="col-sm-2 control-label">Definition</label>
				<div class="col-sm-8">
					<input type="file" id="content" name="content"/>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default btn-sm">Deploy Workflow Definition</button>
				</div>
			</div>
		</form>
	</div>
</div>