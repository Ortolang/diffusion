<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Specific informations about this link</strong></h3>
  </div>
  <div class="panel-body">
    <div class="row">
	  <div class="col-md-2"><p class="text-right"><strong>Name</strong></p></div>
	  <div class="col-md-10">$entity.object.name</div>
    </div>
    <div class="row">
	  <div class="col-md-2"><p class="text-right"><strong>Dynamic</strong></p></div>
	  <div class="col-md-10">$entity.object.dynamic</div>
    </div>
    <div class="row">
	  <div class="col-md-2"><p class="text-right"><strong>Target</strong></p></div>
	  <div class="col-md-10">$entity.object.target <a href="./$entity.object.target">direct access</a></div>
    </div>
    <div class="row">
	  <div class="col-md-2"><p class="text-right"><strong>Clock</strong></p></div>
	  <div class="col-md-10">$entity.object.clock</div>
    </div>
    #if( $entity.object.metadatas.size() == 0 ) 
    <div class="row">
      <div class="col-md-2"><p class="text-right"><strong>Metadatas</strong></p></div>
      <div class="col-md-10"><em>no metadatas associated with this collection</em></div>
    </div>
    #else
	    #foreach( $metadata in $entity.object.metadatas.keySet() )
	    <div class="row">
	      <div class="col-md-2">#if( $foreach.first )<p class="text-right"><strong>Metadatas</strong></p>#end</div>
	      <div class="col-md-10">$metadata : <a href="./$entity.object.metadatas.get($metadata)">$entity.object.metadatas.get($metadata)</a></div>
	    </div>
	    #end
	#end
  </div>
</div> 