<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Search Objects</strong></h3>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" role="form" method="get" action="">
  		<div class="form-group">
  			<div class="col-md-6">
  				#set ($query = $params.getFirst("query"))
	    		<input type="text" class="form-control" id="query" name="query" placeholder="Query" value="#if($query)$query#end ">
	    		<p class="help-block">Ex. TYPE:object ou CONTENT:bootstrap.</p>
	    	</div>
	    	<button type="submit" class="btn btn-default">Search</button>
  		</div>
  	</form>
  	
  	#if( $entity.size() > 0 ) 
	  	<p>$entity.size() result#if($entity.size() > 1)s#end found</p>
	  	#foreach ( $result in $entity )
	  		#set ($url = $base + "/rest/" + $result.service + "/" + $result.type + "s/" + $result.key )
	  		<h4>$result.name <small>$result.type</small></h4>
		  	<small><a href="$url">$url</a></small>
		  	<p>$result.explain</p>
	  	#end
	#end
  </div>
</div> 
