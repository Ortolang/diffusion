<div class="panel panel-default">
  <div class="panel-heading">
  	<h3 class="panel-title"><strong>Project's versions</strong></h3>
  </div>
  <div class="panel-body">
	  <table class="table table-condensed table-hover">
		<thead>
       		<tr>
    	   		<th>#</th>
	       		<th>Key</th>
       			<th>Links</th>
      		</tr>
   		</thead>
   		<tbody>
		#foreach( $entry in $entity.entries.keySet() )
			#set( $count = $foreach.count + $entity.start - 1 )
			<tr>
				<td>$count</td>
				<td>$entry</td>
				<td>
					<div class="btn-group">
   					#foreach( $link in $entity.entries.get($entry) )
   						<a class="btn btn-default btn-xs" href="$link.uri">$link.rel</a> 
   					#end
   					</div>
   				</td>
   			</tr>
		#end
	  </tbody>
    </table>
  </div>
</div>
#foreach( $link in $entity.links )
	#if( $link.rel == "create" )
	<div class="panel panel-default">
		<div class="panel-heading">
  			<h3 class="panel-title"><strong>Create</strong> a new version</h3>
  		</div>
		<div class="panel-body">
			<form class="form-horizontal" role="form" method="POST" action="$link.uri">
 				<div class="form-group">
    				<label for="name" class="col-md-2 control-label">Name</label>
    				<div class="col-md-6">
    					<input type="text" class="form-control" id="name" name="name" placeholder="Version's name (only for release)">
    				</div>
	  			</div>
  				<div class="form-group">
		  			<div class="col-md-offset-2 col-md-3">
		  				<button type="submit" name="type" value="SNAPSHOT" class="btn btn-default">Snapshot</button>
		  			</div>
		  			<div class="col-md-3">
		  				<button type="submit" name="type" value="RELEASE" class="btn btn-default">Release</button>
		  			</div>
		  		</div>
			</form>
		</div>
	</div>
	#end
#end