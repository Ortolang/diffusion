[
  {
    "className": "section-label",
    "template": "<hr /><div><strong>Analyser le lemme :</strong></div>"
  },
  {
    "className": "row",
    "fieldGroup": [
      {
        "className": "col-xs-6",
        "key": "forme_cat",
        "type": "input",
        "templateOptions": {
          "placeholder": "<lemme>"
        }
      },
      {
        "className": "col-xs-6",
        "key": "categorie",
        "type": "select",
        "defaultValue": "VERBE",
        "templateOptions": {
          "required": true,
          "placeholder": "<catégorie>",
          "options": [
            {
              "name": "Verbe",
              "value": "VERBE"
            },
            {
              "name": "Nom",
              "value": "NOM"
            },
            {
              "name": "Adjectif",
              "value": "ADJ"
            },
            {
              "name": "Adverbe",
              "value": "ADV"
            }
          ]
        }
      }
    ]
  },
  {
    "className": "section-label",
    "template": "<hr /><div><strong>Analyser des lemmes à partir d&apos;un fichier :</strong></div>"
  },
  {
    "className": "row",
    "fieldGroup": [
      {
        "className": "col-xs-6",
        "key": "input-file",
        "type": "inputFile",
        "templateOptions": {
          "placeholder": "Sélectionner un fichier sur votre ordinateur",
          "description": "1 lemme + , ou / + 1 catégorie (VERBE, NOM, ADJ, ADV) + 1 saut de ligne par ligne (ISO-8859-1). ex: autofourniture,NOM"
        }
      },
      {
        "className": "col-xs-6",
        "key": "format",
        "type": "select",
        "defaultValue": "PLAT",
        "templateOptions": {
          "placeholder": "Format de sortie",
          "options": [
            {
              "name": "Plat",
              "value": "PLAT"
            },
            {
              "name": "XML",
              "value": "XML"
            },
            {
              "name": "Triplet",
              "value": "TRIPLET"
            }
          ]
        }
      }
    ]
  },
  {
    "className": "section-label",
    "template": "<div class='alert alert-info' role='alert'><p>Les informations relatives à la validation et l'affichage du fichier XML se trouvent dans la description.</p></div>"
  }
]