[
    {
        "type": "label", 
        "key": "process-options", 
        "label": "Process options", 
        "description": "Process options allow to define each step of the TokensFilter pipe.",
        "required": false
    },
    {
        "type": "checkbox", 
        "key": "tokenizer", 
        "label": "Tokenizer", 
        "default": true 
    },
    {
        "type": "checkbox", 
        "key": "morphosyntaxer", 
        "label": "MorphoSyntaxer", 
        "default": true 
    },
    {
        "type": "checkbox", 
        "key": "postagger", 
        "label": "POSTagger", 
        "default": true 
    },
    {
        "type": "checkbox", 
        "key": "parser", 
        "label": "Parser", 
        "default": false 
    },
    {
        "type": "label", 
        "key": "input-options", 
        "label": "Input options", 
        "required": false
    },
    {
        "key": "txt-input",
        "type": "dataobject",
        "label": "Input file",
        "placeholder": "Input file name",
        "required": true,
        "description": "File with the text to process."
    },
    {
        "type": "checkbox", 
        "key": "oral", 
        "label": "Oral", 
        "description": "Set oral for all filters.",
        "default": false 
    },
    {
        "key": "reader",
        "type": "select",
        "label": "Reader",
        "required": false,
        "description": "Choose a reader to bridge the gap between your input file and the raw or tokenized text that will feed the process.",
        "default": {
            "id": "raw",
            "name": "Raw text.",
            "group": "Text"
        },
        "options": [
            {
                "id": "raw",
                "name": "Raw text.",
                "group": "Text"
            },
            {
                "id": "tokens",
                "name": "Tokens : Tokenized text from a text file with one token per line.",
                "group": "Text"
            },
            {
                "id": "columns",
                "name": "Columns : Tokenized text from a csv like file with one token and its associated information per line.",
                "group": "Text"
            },
            {
                "id": "MARS",
                "name": "MARS : XML format used as MarsaTag POS Tagger output.",
                "group": "XML"
            },
            {
                "id": "SYNT",
                "name": "SYNT : XML format used as MarsaTag Parser output.",
                "group": "XML"
            },
            {
                "id": "praat-textgrid",
                "name": "Praat TextGrid.",
                "group" : "Other"
            },
            {
                "id": "praat-textgrid-text",
                "name": "Praat TextGrid without time information.",
                "group": "Other"
            },
            {
                "id": "StAX",
                "name": "StAX : extract raw text from many kinds of XML files (like TEI).",
                "group": "XML"
            },
            {
                "id": "tika-raw",
                "name": "Use Tika to extract raw text content from various formats, principally Word or PDF.",
                "group": "Other"
            },
            {
                "id": "tika-xhtml",
                "name": "Tika-xhtml : use Tika to extract the text content with xhtml formatting from various formats, principally Word or PDF.",
                "group" : "Other"
            }
        ]
    },
    {
        "key": "praat-tier",
        "type": "text",
        "label": "The tier to extract",
        "requiredExpression": "reader===\"praat-textgrid\" || reader===\"praat-textgrid-text\"",
        "hideExpression": "reader!==\"praat-textgrid\" && reader!==\"praat-textgrid-text\"",
        "hide": true
    },
