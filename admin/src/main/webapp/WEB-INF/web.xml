<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <filter>
    <filter-name>Authentication</filter-name>
    <filter-class>fr.ortolang.diffusion.admin.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Authentication</filter-name>
    <url-pattern>*.sdo</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>fr.ortolang.diffusion.admin.login.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>fr.ortolang.diffusion.admin.home.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Server State</servlet-name>
    <servlet-class>fr.ortolang.diffusion.admin.server.ServerStateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home.sdo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Server State</servlet-name>
    <url-pattern>/serverstate.sdo</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/home.sdo</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/pages/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/pages/404.jsp</location>
  </error-page>
</web-app>